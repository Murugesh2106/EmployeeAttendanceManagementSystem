@model Attendance





@{
    ViewData["Title"] = "Create Attendance List";
}

<!-- Dark background with light text -->
<div class="container-fluid bg-dark text-light min-vh-100 py-4">
    <h1 class="text-center">Create Attendance List</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Light background form with dark text -->
            <form asp-action="Create" class="bg-light text-dark p-4 rounded shadow-sm">
                
                <div class="mt-2">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <input asp-for="EmployeeId" class="form-control" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="CheckInTime" class="control-label"></label>
                    <input asp-for="CheckInTime" class="form-control" />
                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label asp-for="CheckOutTime" class="control-label"></label>
                    <input asp-for="CheckOutTime" class="form-control" />
                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                </div>

                <div class="form-control mt-2">
                    <input type="submit" value="Create" class="btn btn-primary m-3" /> 
                    <a asp-action="Index" class="btn btn-primary text-light m-3">Back to List</a>
                   
                </div>
                
            </form>

        </div>
    </div>


</div>


