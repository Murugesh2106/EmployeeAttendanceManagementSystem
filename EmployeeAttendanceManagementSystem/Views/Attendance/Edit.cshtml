@model Attendance

@{
    ViewData["Title"] = "Edit Attendance";
}

<!-- Dark background with light text -->
<div class="container-fluid bg-dark text-light min-vh-100 py-4">
    <h1>Edit Attendance Details</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AttendanceId" />

                <div class="mt-2">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <input asp-for="EmployeeId" class="form-control" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="CheckInTime" class="control-label"></label>
                    <input asp-for="CheckInTime" class="form-control" />
                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="CheckOutTime" class="control-label"></label>
                    <input asp-for="CheckOutTime" class="form-control" />
                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary m-3" />
                    <a asp-action="Index" class="btn btn-primary text-light m-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


