@model Attendance

@{
    ViewData["Title"] = "Delete Attendance List";
}

<!-- Dark background with light text -->
<div class="container-fluid bg-dark text-light min-vh-100 py-4">
    <h1>Delete Attendance</h1>

    <h3>Are you sure you want to delete this Attendance record?</h3>
    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CheckInTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckInTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CheckOutTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckOutTime)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AttendanceId" />
            <input type="submit" value="Delete" class="btn btn-danger m-3" />
            <a asp-action="Index" class="btn btn-primary text-light m-3">Back to List</a>
        </form>
    </div>
</div>
